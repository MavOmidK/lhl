{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@lhl/client/data-access": ["libs/client/data-access/src/index.ts"],
      "@lhl/client/feature-dashboard": [
        "libs/client/feature-dashboard/src/index.ts"
      ],
      "@lhl/client/feature-header": ["libs/client/feature-header/src/index.ts"],
      "@lhl/server/feature-manager": [
        "libs/server/feature-manager/src/index.ts"
      ],
      "@lhl/server/feature-player": ["libs/server/feature-player/src/index.ts"],
      "@lhl/server/feature-team": ["libs/server/feature-team/src/index.ts"],
      "@lhl/shared/domain": ["./libs/shared/domain/src/index.ts"],
      "@lhl/styles": ["libs/shared/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
